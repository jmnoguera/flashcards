<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flashcardFormLayout"
    tools:context=".FlashcardForm"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/flashcardNameForm"
        android:layout_width="215dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/flashcardSpinnerForm"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/flashcardNameForm"
        app:layout_constraintTop_toBottomOf="@+id/flashcardNameForm" />

    <ImageButton
        android:id="@+id/flashcardImageForm"
        android:layout_width="362dp"
        android:layout_height="182dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/flashcardSpinnerForm"
        app:layout_constraintTop_toBottomOf="@+id/flashcardSpinnerForm"
        app:srcCompat="@drawable/placeholder" />

    <EditText
        android:id="@+id/flashcardWordAForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/flashcardImageForm"
        app:layout_constraintTop_toBottomOf="@+id/flashcardImageForm" />

    <EditText
        android:id="@+id/flashcardWordBForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/flashcardWordAForm"
        app:layout_constraintTop_toBottomOf="@+id/flashcardWordAForm" />

    <Button
        android:id="@+id/flashcardAddButtonForm"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>