<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collectionLayout"
    android:layout_width="180dp"
    android:layout_height="180dp">


    <ImageView
        android:id="@+id/collectionImage"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/collectionName"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/collectionImage"
        android:layout_alignStart="@+id/collectionImage"
        android:layout_below="@+id/collectionImage"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/collectionImage"
        app:layout_constraintStart_toStartOf="@+id/collectionImage"
        app:layout_constraintTop_toBottomOf="@+id/collectionImage" />
</android.support.constraint.ConstraintLayout>